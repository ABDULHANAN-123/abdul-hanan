{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    { "type": "text", "id": "banner_title", "label": "Banner Title", "default": "Your Title Here" },
    { "type": "text", "id": "banner_subtitle", "label": "Banner Subtitle", "default": "Your Subtitle Here" },
    { "type": "url", "id": "banner_button_url", "label": "Button URL" },
    { "type": "text", "id": "banner_button_text", "label": "Button Text", "default": "Click Here" }
  ],
  "presets": [{ "name": "Custom Banner" }]
}
{% endschema %}

<div class="custom-banner">
  <h1>{{ section.settings.banner_title }}</h1>
  <p>{{ section.settings.banner_subtitle }}</p>
  <a href="{{ section.settings.banner_button_url }}" class="banner-btn">{{ section.settings.banner_button_text }}</a>
</div>

<style>
.custom-banner { text-align: center; padding: 80px 20px; background-color: #fff; }
.banner-btn { padding: 10px 20px; background-color: red; color: #fff; text-decoration: none; transition: transform 0.3s; }
.banner-btn:hover { transform: scale(1.05); }
</style>